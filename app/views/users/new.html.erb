<h1>さいんあっぷ！</h1>
<%= form_with(model: @user, local:true)do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<%= f.label :name, 'おなまえ' %>
<%= f.text_field :name %>
<%= f.label :email, 'めーる' %>
<%= f.email_field :email %>
<%= f.label :password, 'ぱす' %>
<%= f.password_field :password %>
<%= f.label :password_confirmation, 'ぱすかくにん' %>
<%= f.password_field :password_confirmation %>
<%= f.submit 'さいんあっぷ！' %>
<% end %>